<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#606c38"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="#283618"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_center" />

    <View
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="#283618"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_center" />

    <View
        android:id="@+id/view3"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="#283618"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/center" />

    <View
        android:id="@+id/view2"
        android:layout_width="3dp"
        android:layout_height="350dp"
        android:layout_marginEnd="8dp"
        android:background="#283618"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/center"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="3dp"
        android:layout_height="350dp"
        android:background="#283618"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/center_end"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="User1"
        android:background="#eae2b7"
        android:textColor="#bc6c25"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/result_user1"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/result_user1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/result_user2"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@id/user1"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="#eae2b7"/>

    <TextView
        android:id="@+id/result_user2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/user2"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@id/result_user1"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="#eae2b7"/>

    <TextView
        android:id="@+id/user2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="#eae2b7"
        android:text="user2"
        android:gravity="start"
        android:textColor="#bc6c25"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@id/result_user2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#283618"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/result_user1" />

    <ImageView
        android:id="@+id/top_start"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="#eae2b7"
        android:contentDescription="@string/nd"
        android:elevation="3dp"
        app:layout_constraintBottom_toTopOf="@id/center_start"
        app:layout_constraintEnd_toEndOf="@id/center_start"
        app:layout_constraintStart_toStartOf="@+id/center_start"
        app:layout_constraintTop_toTopOf="@+id/top_center" />

    <ImageView
        android:id="@+id/top_center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="#eae2b7"
        android:contentDescription="@string/nd"
        android:elevation="3dp"
        app:layout_constraintBottom_toTopOf="@id/center_end"
        app:layout_constraintStart_toEndOf="@id/top_start" />

    <ImageView
        android:id="@+id/top_end"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="#eae2b7"
        android:contentDescription="@string/nd"
        android:elevation="3dp"
        app:layout_constraintBottom_toTopOf="@id/center_end"
        app:layout_constraintEnd_toEndOf="@id/center_end"
        app:layout_constraintStart_toEndOf="@id/top_center"
        app:layout_constraintTop_toTopOf="@+id/top_center" />

    <ImageView
        android:id="@+id/center_start"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:background="#eae2b7"
        android:contentDescription="@string/nd"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/center_end"
        app:layout_constraintEnd_toStartOf="@id/center"
        app:layout_constraintTop_toTopOf="@id/center" />

    <ImageView
        android:id="@+id/center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#eae2b7"
        android:contentDescription="@string/nd"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/center_end"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:background="#eae2b7"
        android:contentDescription="@string/nd"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/center"
        app:layout_constraintStart_toEndOf="@id/center"
        app:layout_constraintTop_toTopOf="@id/center" />

    <ImageView
        android:id="@+id/bottom_start"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="#eae2b7"
        android:contentDescription="@string/nd"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="@id/center_start"
        app:layout_constraintStart_toStartOf="@+id/center_start"
        app:layout_constraintTop_toBottomOf="@id/center_start" />

    <ImageView
        android:id="@+id/bottom_center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="#eae2b7"
        android:contentDescription="@string/nd"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_start"
        app:layout_constraintEnd_toEndOf="@id/center"
        app:layout_constraintTop_toBottomOf="@id/center" />

    <ImageView
        android:id="@+id/bottom_end"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#eae2b7"
        android:contentDescription="@string/nd"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_start"
        app:layout_constraintEnd_toEndOf="@id/center_end"
        app:layout_constraintStart_toEndOf="@+id/bottom_center"
        app:layout_constraintTop_toBottomOf="@id/center_end" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="#bc6c25"
        android:elevation="3dp"
        android:padding="8dp"
        android:text="@string/reset"
        app:layout_constraintEnd_toEndOf="@id/bottom_end"
        app:layout_constraintStart_toStartOf="@id/bottom_start"
        app:layout_constraintTop_toBottomOf="@id/bottom_center" />

</androidx.constraintlayout.widget.ConstraintLayout>